{
  "apiVersion": "apps/v1",
  "kind": "PersistentVolumeClaim",
  "metadata": {
    "name": "{{ $.NAME }}",
    "labels": {
      "app": "{{ $.APP }}",
      "app-pvc": "{{ $.APP }}-{{ $.NAME }}"
    }
  },
  "spec": {
    "accessModes": [
      "{{ $.ACCESS_MODE }}"
    ],
    "resources": {
      "requests": {
        "storage": "{{ $.STORAGE }}"
      }
    },
    "storageClassName": "{{ $.STORAGE_CLASS_NAME }}"
  }
}
